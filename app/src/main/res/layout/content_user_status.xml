<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:animateLayoutChanges="true"
	android:orientation="vertical"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:context=".UserStatusActivity"
	tools:showIn="@layout/activity_user_status">

	<com.sasuke.covid19.CompoundTextView

		android:id="@+id/user_status_ctv_status"
		android:layout_width="match_parent"
		android:layout_height="80dp"
		android:layout_marginTop="20dp"
		android:layout_marginBottom="100dp" />

	<com.sasuke.covid19.CompoundTextView
		android:id="@+id/user_status_ctv_tested_neg"
		android:layout_width="250dp"
		android:layout_height="60dp"
		android:layout_gravity="center_horizontal"
		android:layout_marginBottom="60dp"
		android:background="@drawable/shape_rounded_cornors" />

	<com.sasuke.covid19.CompoundTextView
		android:id="@+id/user_status_ctv_tested_pos"
		android:layout_width="250dp"
		android:layout_height="60dp"
		android:layout_gravity="center_horizontal"
		android:layout_marginBottom="60dp"
		android:background="@drawable/shape_rounded_cornors" />

	<com.sasuke.covid19.CompoundTextView
		android:id="@+id/user_status_ctv_recovered"
		android:layout_width="250dp"
		android:layout_height="60dp"
		android:layout_gravity="center_horizontal"
		android:background="@drawable/shape_rounded_cornors"
		android:visibility="visible" />

</LinearLayout>